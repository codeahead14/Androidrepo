<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_local_label"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:key="@string/pref_temp_set"
        android:title="@string/pref_temp_label"
        android:entries="@array/pref_temp_units"
        android:entryValues="@array/pref_temp_values"
        android:defaultValue="@string/pref_temp_metrics"/>

</PreferenceScreen>